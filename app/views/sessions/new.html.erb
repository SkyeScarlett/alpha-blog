<h1 class="text-center mt-4">Log in!</h1>



<div class ="container">

  <div class="row justify-content-center">

    <div class="col-10">

      <%= form_with(class: :session, url: login_path, class: "shadow p-3 mb-3 bg-body-tertiary rounded", local: true, data: { turbo: false }) do |f| %>

        <br>

        <div class="form-group row">  
          <%= f.label :email, class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
          </div>
        </div>

        <br>

        <div class="form-group row">  
        <%= f.label :password, class:"col-2 col-form-label" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>

        <br>

        <div class="d-flex justify-content-center">
          <div>
            <%= f.submit "Log in", class: "btn btn-outline-secondary btn-lg" %>
          </div>
        </div>

      <% end %>

    <br>

    </div>

    <div class="d-flex mb-4 justify-content-center">
      <%= link_to '[return to articles listing]', articles_path, class: "text-secondary" %>
    </div>

  </div>

</div>