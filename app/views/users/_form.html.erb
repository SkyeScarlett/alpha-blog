

<div class ="container">

  <div class="row justify-content-center">

    <div class="col-10">

      <%= render 'shared/errors', obj: @user %>

      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-body-tertiary rounded", local: true, data: { turbo: false }) do |form| %>

        <% form.fields_for :session do |f| %>

       <div class="form-group row">  
          <%= f.label :username, class:"col-2 col-form-label" %>
          <div cla ss="col-10">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
          </div>
        </div>

        <br>

        <div class="form-group row">  
          <%= f.label :email, class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
          </div>
        </div>

        <br>

        <div class="form-group row">  
          <%= f.label :password, class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
          </div>
        </div>

        <br>

        <% end %>

        <div class="d-flex justify-content-center">
          <div>
            <%= form.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-outline-secondary btn-lg") %>
          </div>
        </div>

      <% end %>

    <br>

    </div>

    <div class="d-flex mb-4 justify-content-center">
      <%= link_to '[return to articles listing]', articles_path, class: "text-secondary" %>
    </div>

  </div>

</div>