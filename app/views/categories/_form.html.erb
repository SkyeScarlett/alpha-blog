<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-body-tertiary rounded", local: true, data: { turbo: false }) do |f| %>

  <div class="form-group row">  
    <%= f.label :name, 'Category name', class:"col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
    </div>
  </div>

  <br>

  <div class="d-flex justify-content-center">
    <div>
      <%= f.submit class: "btn btn-outline-secondary btn-lg" %>
    </div>
  </div>

<% end %>

<br>