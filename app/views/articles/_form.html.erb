<div class ="container">

  <div class="row justify-content-center">

    <div class="col-10">

      <%= render 'shared/errors', obj: @article %>

      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-body-tertiary rounded", local: true, data: { turbo: false }) do |f| %>

        <div class="form-group row">  
          <%= f.label :title, class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
          </div>
        </div>

        <br>

        <div class="form-group row">  
          <%= f.label :description, class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows:10, class: "form-control", placeholder: "Description of article" %>
          </div>
        </div>

        <br>

        <div class="d-flex justify-content-center">
          <div>
            <%= f.submit class: "btn btn-outline-secondary btn-lg" %>
          </div>
        </div>

      <% end %>

    <br>

    </div>

    <div class="d-flex mb-4 justify-content-center">
      <%= link_to '[return to articles listing]', articles_path, class: "text-secondary" %>
    </div>

  </div>

</div>